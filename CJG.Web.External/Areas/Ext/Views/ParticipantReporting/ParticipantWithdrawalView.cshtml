@model CJG.Web.External.Areas.Ext.Models.ParticipantReporting.ParticipantWithdrawalModel
@{
    ViewBag.Title = "Report Participant Withdrawal";
}

<div class="row" ng-controller="ParticipantInvitationView" ng-grant-application-id="@ViewBag.GrantApplicationId">
    <div class="row">
        @Html.ActionLink("Return", "ParticipantReportingView", "ParticipantReporting", new { grantApplicationId = ViewBag.GrantApplicationId }, new { @class = "link--back" })
    </div>

    <program-title-label ng-model="model"></program-title-label>

    <div class="grant-files">
        <div class="margin-bottom container-full-width">
            <h2>Report Participant Withdrawal</h2>
            <div ng-if="alert.message" class="row row--alert">
                <div class="alert" ng-class="'alert--' + alert.type" role="alert" ng-bind-html="alert.message"></div>
            </div>

            <div>
                <p>Reporting the withdrawal of participants is a requirement under your contract with the Province.</p>
                <p>
                    For your convenience, you may use the email template below to provide '@Model.ParticipantName' with the link.<br/>
                    Please copy and paste it into your own email and send it to your participant.<br/>
                    You may revise the email to make it better suited to your business needs.
                </p>

                <p><strong>Participant email:</strong> <a href="mailto: @Model.ParticipantEmail">@Model.ParticipantEmail</a></p>

                <div class="copy-boxes">
                    <div class="wrapper--copy-section wrapper--email-template">
                        <div class="wrapper--btn">
                            <button type="button" class="btn btn--primary copy-to-clipboard" data-clipboard-target=".email-template">Copy Email</button>
                        </div>
                        <textarea class="copy-box email-template">@Model.WithdrawalInvitationEmailText</textarea>
                    </div>

                    <div class="wrapper--copy-section wrapper--copy-link">
                        <div class="wrapper--btn">
                            <button type="button" class="btn btn--primary copy-to-clipboard" data-clipboard-target=".link-only">Copy Link Only</button>
                        </div>
                        <textarea class="copy-box link-only">@Model.WithdrawalInvitationUrlLink</textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
