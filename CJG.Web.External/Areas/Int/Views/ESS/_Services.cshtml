<div ng-switch-when="EmploymentServicesAndSupports" ng-controller="EmploymentServices">
	<span class="panel-section-item">
		<span class="panel-section-title" ng-click="toggle($event)">{{component.Caption}}</span>
		<span class="panel-section-buttons">
			<span><button class="btn btn--empty" style="pointer-events: none;" tabindex="-1">&nbsp;</button></span>
			<a class="btn btn--secondary" ng-if="component.CanAdd && !section.editing" ng-disabled="parent.editing" ng-click="addProvider()">Add Provider</a>
			<section-edit-buttons ng-model="section.editing" ng-if="component.CanEdit"></section-edit-buttons>
			<span class="small" ng-class="section.show ? 'up-arrow': 'down-arrow'" ng-click="toggle($event)"></span>
		</span>
	</span>
	<div class="panel-section-content" ng-if="section.show">
        <table class="clearfix table table--supports">
            <thead ng-if="model.AllowEstimatedCostEntry">
                <tr>
                    <th class="">Type</th>
                    <th class="align-right">Estimated Cost</th>
                    <th class="align-right"></th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="item in model.EmploymentServiceLines">
                    <td class="no-border">
                        <input type="checkbox" id="service-line-{{$index}}-{{section.name}}" ng-model="item.IsSelected" ng-value="item.Key" ng-disabled="!section.editing"/>
                        <label for="service-line-{{$index}}-{{section.name}}">{{item.Value}}<span ng-if="!section.editing && item.EnableCustomTitle"> - {{ item.CustomCostTitle}}</span></label>
                        <div ng-if="section.editing && item.EnableCustomTitle">
                            <input type="text" class="input--medium" ng-model="item.CustomCostTitle" placeholder="Enter custom name..." ng-editing="section.editing"/>
                        </div>
                    </td>
                    <td class="no-border align-right" style="width: 150px;" ng-if="model.AllowEstimatedCostEntry">
                        <input type="text" class="input--small" ng-model="item.AssessedCost" ng-currency ng-editing />
                    </td>
                    <td class="no-border"></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

