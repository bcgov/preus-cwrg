<div ng-controller="CompletionReport" ng-if="grantFile.ShowCompletionReport">
    <span class="panel-section-item">
        <span class="panel-section-title" ng-click="toggle($event)">Completion Report @*<span class="icon-attention" ng-show="completionReportStatus.Status === 'Submitted' || completionReportStatus.Status === 'Complete'"></span>*@</span>
        <span class="panel-section-buttons">
            <span><button class="btn btn--empty" style="pointer-events: none;" tabindex="-1">&nbsp;</button></span>
            <span class="small" ng-class="section.show ? 'up-arrow': 'down-arrow'" ng-click="toggle($event)"></span>
        </span>
    </span>
    <div class="panel-section-content" ng-if="section.show">
        <span class="k-link">
            @Html.ActionLink("View Completion Report", "CompletionReportView", "CompletionReport", new { grantApplicationId = (int)ViewBag.GrantApplicationId }, null)
        </span>
        <span class="pull-right">
            Status: {{model.Status}}
        </span>
    </div>
</div>